# ========================================
# Arbfarm Environment Variables (Testnet)
# ========================================
# Copy this file to .env.local and fill in your values

# ============ REQUIRED ============

# Gemini API Key (free tier from https://aistudio.google.com/apikey)
GEMINI_API_KEY=

# Deployer private key (for contract deployment only)
# This is NOT used at runtime - users sign their own transactions
DEPLOYER_PRIVATE_KEY=

# ============ AUTO-SET BY DEPLOY SCRIPT ============

# Contract address on Base Sepolia (set after running deploy script)
NEXT_PUBLIC_ARBITRAGE_EXECUTOR_ADDRESS=

# ============ OPTIONAL ============

# Custom RPC URLs (defaults provided)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

